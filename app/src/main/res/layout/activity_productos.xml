<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/color_light"
tools:context="com.dts.tomweb.Productos">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/color_light"
        tools:context="com.dts.tomweb.ListaConteos">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="2"
            android:scaleY="2" />

        <HorizontalScrollView
            android:id="@+id/HScroll"
            android:layout_width="341dp"
            android:layout_height="419dp"
            android:layout_below="@+id/txtNombre"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="64dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="130dp"
            android:fillViewport="true"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:stretchColumns="1">

                <GridView
                    android:id="@+id/gridview1"
                    android:layout_width="366dp"
                    android:layout_height="42dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp">

                </GridView>

                <GridView
                    android:id="@+id/gridview2"
                    android:layout_width="382dp"
                    android:layout_height="383dp"
                    android:layout_below="@+id/gridview1"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="-2dp">

                </GridView>


            </RelativeLayout>

        </HorizontalScrollView>

        <RelativeLayout
            android:id="@+id/relTop"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/color_dark">

            <TextView
                android:id="@+id/Productos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:text="Lista de Productos"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:clickable="true"
                android:onClick="doHelp"
                android:padding="7dp"
                android:src="@drawable/help" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relBot"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/color_medium">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:onClick="doExit"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:paddingBottom="7dp"
                android:src="@drawable/arr_prev" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:adjustViewBounds="true"
                android:src="@drawable/dts" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relTop"
            android:layout_alignParentStart="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="14dp"
            android:text="Barra:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView28"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="23dp"
            android:text="Nombre:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txtBarra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relTop"
            android:layout_marginStart="58dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/textView28"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtBarra"
            android:layout_marginStart="34dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/textView29"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txtRegs"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relTop"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="444dp"
            android:layout_marginEnd="8dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relTop"
            android:layout_marginTop="444dp"
            android:layout_marginEnd="3dp"
            android:layout_toStartOf="@+id/txtRegs"
            android:text="Regs: "
            android:textSize="24sp"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relTop"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="444dp"
            android:layout_marginEnd="178dp"
            android:background="@drawable/spinnerstyle" />

    </RelativeLayout>

</RelativeLayout>


